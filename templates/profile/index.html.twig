{% extends 'base.html.twig' %}

{% block title %}{{ user.firstName }} {{ user.name }}{% endblock %}
    
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Personal Information</h3>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>First Name</th>
                            <td>{{ user.firstName }}</td>
                        </tr>
                        <tr>
                            <th>Last Name</th>
                            <td>{{ user.name }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ user.phone }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <h3>Customer Addresses</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Postal Code</th>
                            <th>City</th>
                            <th>Country</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for customerAddress in customerAdresses %}
                            <tr>
                                <td>{{ customerAddress.type }}</td>
                                <td>{{ customerAddress.phone }}</td>
                                <td>{{ customerAddress.adress }}</td>
                                <td>{{ customerAddress.postalCode }}</td>
                                <td>{{ customerAddress.city }}</td>
                                <td>{{ customerAddress.country }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <h3>Account Information</h3>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
{% endblock %}
